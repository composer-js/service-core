{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": false,
        "declarationDir": "dist/types",
        "outDir": "dist/lib"
    },
    "include": ["src"]
}
