{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2015",
        "module": "commonjs",
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declarationDir": "dist/types",
        "outDir": "dist/lib",
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
